<table class="pub-table">
    <thead>
    <tr>
        <th colspan="3" class="" width="100">总课程表</th>
        {{#each class}}
            <th>{{this}}</th>
        {{/each}}
    </tr>
    </thead>
    <tbody>
    {{#course}}
        {{#if week}}
            <tr>
                <td width="50px" style="border: 1px solid #cbcbcb" rowspan="{{jointcount}}">{{week}}</td>
                <td width="50px">{{activity}}</td>
                <td width="100px">{{starttime}}-{{endtime}}</td>
                {{#jointcourse}}
                    <td>
                        <p>{{name}}</p>
                        <p>{{teach}}</p>
                    </td>
                {{/jointcourse}}
            </tr>
            {{else}}
            <tr>
                <td width="50px">{{activity}}</td>
                <td width="100px">{{starttime}}-{{endtime}}</td>
                {{#jointcourse}}
                    <td>
                        <p>{{name}}</p>
                        <p>{{teach}}</p>
                    </td>
                {{/jointcourse}}
            </tr>
        {{/if}}
    {{/course}}
    </tbody>
</table>